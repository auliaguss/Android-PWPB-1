<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="15dp"
android:gravity="top">

<TextView
    android:id="@+id/judul"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="40dp"
    android:gravity="center"
    android:text="Atta Halilintar"/>
<TextView
    android:id="@+id/label1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/judul"
    android:text="Nama"/>
<EditText
    android:id="@+id/ubah_teks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_below="@id/label1"/>
<TextView
    android:id="@+id/label2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ubah_teks"
    android:text="Alamat"/>
<EditText
    android:id="@+id/ubah_teks2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_below="@id/label2"/>
<TextView
    android:id="@+id/label3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ubah_teks2"
    android:text="Kampus"/>
<EditText
    android:id="@+id/ubah_teks3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_below="@id/label3"/>

<LinearLayout
    android:id="@+id/foto"
    android:layout_width="match_parent"
    android:layout_below="@id/ubah_teks3"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/foto1"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@drawable/zayn"/>
    <ImageView
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/foto2"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@drawable/zayn"/>

    <ImageView
        android:id="@+id/foto3"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@drawable/zayn"/>
</LinearLayout>

<Button
    android:id="@+id/ok"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/foto"
    android:layout_alignParentEnd="true"
    android:text="NEXT" />

<Button
    android:id="@+id/batal"
    android:layout_width="150dp"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/foto"
    android:layout_alignParentStart="true"
    android:text="KEMBALI" />

</RelativeLayout>